@using FeatureManagementLibraryTest.Features;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FeatureManagementLibraryTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FeatureManagementLibraryTest.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FeatureManagementLibraryTest</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>


                        <li class="nav-item rounded @((Context.Request.RouteValues["action"] as string == "FeatureAll") ? "bg-primary" : "")">
                            <a class="nav-link active text-dark @((Context.Request.RouteValues["action"] as string == "FeatureAll") ? "text-white" : "")" asp-area="" asp-controller="Home" asp-action="FeatureAll">All Features Pages Check</a>
                            </li>
                   

                        <feature name=@nameof(FeatureManagement.FeatureA)>
                            <li class="nav-item rounded @((Context.Request.RouteValues["action"] as string == "FeatureA") ? "bg-primary" : "")">
                                <a class="nav-link text-dark @((Context.Request.RouteValues["action"] as string == "FeatureA") ? "text-white" : "")" asp-area="" asp-controller="Home" asp-action="FeatureA">Feature A</a>
                            </li>
                        </feature>

                        <feature name=@nameof(FeatureManagement.FeatureB)>
                            <li class="nav-item rounded @((Context.Request.RouteValues["action"] as string == "FeatureB") ? "bg-primary" : "")">
                                <a class="nav-link text-dark @((Context.Request.RouteValues["action"] as string == "FeatureB") ? "text-white" : "")" asp-area="" asp-controller="Home" asp-action="FeatureB">Feature B</a>
                            </li>
                        </feature>

                        <feature name=@nameof(FeatureManagement.FeatureC)>
                            <li class="nav-item rounded @((Context.Request.RouteValues["action"] as string == "FeatureC") ? "bg-primary" : "")">
                                <a class="nav-link text-dark @((Context.Request.RouteValues["action"] as string == "FeatureC") ? "text-white" : "")" asp-area="" asp-controller="Home" asp-action="FeatureC">Feature C</a>
                            </li>
                        </feature>

                        <feature name=@nameof(FeatureManagement.FeatureD)>
                            <li class="nav-item rounded  @((Context.Request.RouteValues["action"] as string == "FeatureD") ? "bg-primary" : "")">
                                <a class="nav-link text-dark @((Context.Request.RouteValues["action"] as string == "FeatureD") ? "text-white" : "")" asp-area="" asp-controller="Home" asp-action="FeatureD">Feature D</a>
                            </li>
                        </feature>

                        <feature name=@nameof(FeatureManagement.FeatureE)>
                            <li class="nav-item rounded @((Context.Request.RouteValues["action"] as string == "FeatureE") ? "bg-primary" : "")">
                                <a class="nav-link text-dark @((Context.Request.RouteValues["action"] as string == "FeatureE") ? "text-white" : "")" asp-area="" asp-controller="Home" asp-action="FeatureE">Feature E</a>
                            </li>
                        </feature>


                        <feature name=@nameof(FeatureManagement.FeatureF)>
                            <li class="nav-item rounded @((Context.Request.RouteValues["action"] as string == "FeatureF") ? "bg-primary" : "")">
                                <a class="nav-link text-dark @((Context.Request.RouteValues["action"] as string == "FeatureF") ? "text-white" : "")" asp-area="" asp-controller="Home" asp-action="FeatureF">Feature F</a>
                            </li>
                        </feature>
@* 
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@


                     @*    <feature name=@nameof(FeatureManagement.FeatureA) negate="true">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FeatureA">Feature A</a>
                            </li>
                        </feature> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - FeatureManagementLibraryTest - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
